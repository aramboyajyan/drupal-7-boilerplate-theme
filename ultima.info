; ----------------------------------------------------------------------------
; Custom created theme for [website] website.
; ----------------------------------------------------------------------------
name = Ultima
description = Ultimate starter custom theme. Created by: <a href="http://www.topsitemakers.com" target="_blank">topsitemakers.com</a>.
version = 1.0
core = 7.x
engine = phptemplate
screenshot = images/screenshot.png

; ----------------------------------------------------------------------------
; Stylesheets.
; ----------------------------------------------------------------------------
; Overrides - core modules.
stylesheets[all][] = css/overrides/system.menus.css
stylesheets[all][] = css/overrides/system.messages.css
stylesheets[all][] = css/overrides/system.theme.css
; Overrides - contributed modules.
; stylesheets[all][] = css/overrides/
; Removed stylesheets.
stylesheets[all][] = css/overrides/system.messages.css
; Theme stylesheets - base styles.
stylesheets[all][] = css/base.reset.css
stylesheets[all][] = css/base.responsive.css
; Theme stylesheets.
stylesheets[all][] = css/main.css
stylesheets[all][] = css/pages.css
stylesheets[all][] = css/main.quickfix.css
; Print stylesheets.
stylesheets[print][] = css/main.print.css

; ----------------------------------------------------------------------------
; Scripts.
; ----------------------------------------------------------------------------
; Overrides - core modules.
; scripts[] = javascript/overrides/
; Overrides - contributed modules.
; scripts[] = javascript/overrides/
; Overrides - other scripts.
scripts[] = javascript/overrides/autocomplete.js
; Removed scripts.
; scripts[] = javascript/overrides/
; Other scripts.
scripts[] = javascript/modernizr-2.6.2.min.js
scripts[] = javascript/respond-1.3.0.min.js
scripts[] = javascript/selectivizr-1.0.2.min.js
; Theme JS
scripts[] = javascript/main.js

; ----------------------------------------------------------------------------
; Regions.
; ----------------------------------------------------------------------------
regions[main_menu]      = Main menu
regions[secondary_menu] = Secondary menu
regions[mobile_menu]    = Mobile menu
regions[sidebar_first]  = Left sidebar
regions[sidebar_second] = Right sidebar
regions[content]        = Content
regions[content_above]  = Above content
regions[content_below]  = Below content
regions[footer]         = Footer

; ----------------------------------------------------------------------------
; Theme features; these will be available on the theme settings page.
; ----------------------------------------------------------------------------
features[] = logo
features[] = name
features[] = slogan
features[] = mission
features[] = node_user_picture
features[] = comment_user_picture
features[] = search
features[] = favicon
features[] = main_menu
features[] = secondary_menu

; ----------------------------------------------------------------------------
; Default custom theme settings.
; ----------------------------------------------------------------------------
settings[ultima_breadcrumb_divider] = "|"
settings[ultima_breadcrumb_title_limit] = 60
settings[ultima_breadcrumb_title_trail] = ...
settings[ultima_copyright] = Copyrights [year] &copy; Arani Group Inc. All Rights Reserved.

; ----------------------------------------------------------------------------
; Panels support.
; ----------------------------------------------------------------------------
plugins[panels][layouts] = extensions/layouts

; ----------------------------------------------------------------------------
; Skinr support.
; ----------------------------------------------------------------------------
skinr[api] = 2
skinr[directory] = extensions/skins
